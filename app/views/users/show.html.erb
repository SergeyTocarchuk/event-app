<div class="container">
  <div class="column">
    <h1>My Enrollments</h1>
    <% current_user.enrollments.each do |enrollment| %>
      <div class="card">
        <h4><%= enrollment.event.name %></h4>
        <p>Date: <%= enrollment.event.date %></p>
        <p><%= enrollment.event.body %></p>
        <div class="btn-unjoin">
          <%= link_to 'Unjoin', enrollment_path(enrollment), 
                                method: :delete, 
                                class: "btn", 
                                data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="column">
    <h1>My Events</h1>
    <%= link_to "Create Event", new_event_path %>
    <% current_user.created_events.each do |event| %>
      <div class="card">
        <h4><%= event.name %></h4>
        <p>Date: <%= event.date %></p>
        <p><%= event.body %></p>
        <div class="buttons">
          <%= link_to 'Edit', edit_event_path(event.id), class: "btn" %>
          <%= link_to 'Delete', event_path(event.id), 
                                method: :delete,
                                class: "btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
